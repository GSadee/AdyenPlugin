{
    "name": "bitbag/sylius-adyen-plugin",
    "type": "sylius-plugin",
    "description": "BitBag Adyen plug-in for Sylius.",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "adyen"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "adyen/php-api-library": "^11.0",
        "composer/package-versions-deprecated": "^1.11",
        "nyholm/psr7": "^1.4",
        "sylius/refund-plugin": "^1.6",
        "sylius/sylius": "~1.14.0",
        "symfony/messenger": "^5.4.21 || ^6.4",
        "symfony/serializer": "^5.4.21 || ^6.4",
        "symfony/webpack-encore-bundle": "^1.15"
    },
    "require-dev": {
        "behat/behat": "^3.6.1",
        "behat/mink-selenium2-driver": "^1.4",
        "bitbag/coding-standard": "^3.0.0",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "lakion/mink-debug-extension": "^2.0.0",
        "phpspec/phpspec": "^7.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-webmozart-assert": "^1.0",
        "phpunit/phpunit": ">=8.5",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "sylius/test-application": "^1.14.x-dev",
        "symfony/browser-kit": "^5.4 || 6.0",
        "symfony/debug-bundle": "^5.4.21 || ^6.4",
        "symfony/dotenv": "^5.4.21 || ^6.4",
        "symfony/intl": "^5.4.21 || ^6.4",
        "symfony/web-profiler-bundle": "^5.4.21 || ^6.4",
        "symplify/easy-coding-standard": "^10.0 || ^11.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "symfony/thanks": true
        }
    },
    "conflict": {
        "behat/mink-selenium2-driver": ">=1.7.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.8-dev"
        },
        "public-dir": "vendor/sylius/test-application/public"
    },
    "autoload": {
        "psr-4": {
            "BitBag\\SyliusAdyenPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\BitBag\\SyliusAdyenPlugin\\": ["tests/", "tests/TestApplication/src/"]
        }
    }
}
