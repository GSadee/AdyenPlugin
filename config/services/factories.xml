<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
            id="sylius_adyen.custom_factory.adyen_token"
            class="Sylius\AdyenPlugin\Factory\AdyenTokenFactory"
            decorates="sylius_adyen.factory.adyen_token"
        >
            <argument type="service" id=".inner"/>
        </service>

        <service
            id="sylius_adyen.custom_factory.adyen_reference"
            class="Sylius\AdyenPlugin\Factory\AdyenReferenceFactory"
            decorates="sylius_adyen.factory.adyen_reference"
        >
            <argument type="service" id=".inner"/>
        </service>

        <service
            id="sylius_adyen.custom_factory.log"
            class="Sylius\AdyenPlugin\Factory\LogFactory"
            decorates="sylius_adyen.factory.log"
        >
            <argument type="service" id=".inner"/>
        </service>

        <service
            id="sylius_adyen.custom_factory.adyen_payment_detail"
            class="Sylius\AdyenPlugin\Factory\AdyenPaymentDetailFactory"
            decorates="sylius_adyen.factory.adyen_payment_detail"
        >
            <argument type="service" id=".inner"/>
        </service>

        <service
            id="sylius_adyen.custom_factory.payment_link"
            class="Sylius\AdyenPlugin\Factory\PaymentLinkFactory"
            decorates="sylius_adyen.factory.payment_link"
        />
    </services>
</container>
