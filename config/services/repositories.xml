<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
                class="Sylius\AdyenPlugin\Repository\PaymentMethodRepository"
                id="sylius_adyen.repository.payment_method"
        >
            <argument type="service" id="sylius.repository.payment_method"/>
        </service>

        <service
                class="Sylius\AdyenPlugin\Repository\PaymentRepository"
                id="sylius_adyen.repository.payment"
        >
            <argument type="service" id="sylius.repository.payment"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Repository\RefundPaymentRepository"
            id="sylius_adyen.repository.refund_payment"
        >
            <argument type="service" id="sylius_refund.repository.refund_payment"/>
        </service>


    </services>
</container>