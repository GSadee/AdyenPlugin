<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service
                class="Sylius\AdyenPlugin\Validator\Constraint\HmacSignatureValidator"
                id="sylius_adyen.validator.hmac_signature"
        >
            <argument type="service" id="sylius_adyen.provider.signature_validator"/>
            <argument type="service" id="property_accessor"/>
            <argument type="service" id="serializer"/>
            <tag name="validator.constraint_validator"/>
        </service>

        <service
            class="Sylius\AdyenPlugin\Validator\Constraint\ProvinceAddressConstraintValidatorDecorator"
            id="sylius_adyen.validator.province_address_constraint_decorator"
            decorates="sylius.validator.valid_province_address"
        >
            <argument type="service" id=".inner"/>
        </service>
    </services>
</container>
