<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true"/>

        <service id="sylius_adyen.state_machine.guard.payment" class="Sylius\AdyenPlugin\StateMachine\Guard\AdyenPaymentGuard">
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>

        <service id="sylius_adyen.state_machine.guard.order_payment" class="Sylius\AdyenPlugin\StateMachine\Guard\OrderPaymentGuard">
            <argument type="service" id="sylius_adyen.checker.adyen_payment_method" />
        </service>
    </services>
</container>
