<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service class="Sylius\AdyenPlugin\Logging\Monolog\DoctrineHandler" id="sylius_adyen.logging.monolog.doctrine_handler">
            <argument type="service" id="sylius_adyen.custom_factory.log"/>
            <argument type="service" id="sylius.repository.taxon"/>
        </service>

        <service class="Sylius\AdyenPlugin\Provider\LoggerProvider" id="sylius_adyen.provider.logger">
            <argument type="service" id="sylius_fixtures.logger.handler.console"/>
        </service>
    </services>
</container>
