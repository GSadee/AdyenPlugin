<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service
                id="sylius_adyen.modifier.express_checkout.paypal.order_address"
                class="Sylius\AdyenPlugin\Modifier\ExpressCheckout\Paypal\OrderAddressModifier"
        >
            <argument type="service" id="sylius.factory.address"/>
        </service>
        <service id="Sylius\AdyenPlugin\Modifier\ExpressCheckout\Paypal\OrderAddressModifierInterface"
                 alias="sylius_adyen.modifier.express_checkout.paypal.order_address" />

        <service
                id="sylius_adyen.modifier.express_checkout.google_pay.order_address"
                class="Sylius\AdyenPlugin\Modifier\ExpressCheckout\GooglePay\OrderAddressModifier"
        >
            <argument type="service" id="sylius.factory.address"/>
        </service>
        <service id="Sylius\AdyenPlugin\Modifier\ExpressCheckout\GooglePay\OrderAddressModifierInterface"
                 alias="sylius_adyen.modifier.express_checkout.google_pay.order_address" />

        <service
                id="sylius_adyen.modifier.express_checkout.order_customer"
                class="Sylius\AdyenPlugin\Modifier\ExpressCheckout\OrderCustomerModifier"
        >
            <argument type="service" id="sylius.resolver.customer"/>
        </service>
        <service id="Sylius\AdyenPlugin\Modifier\ExpressCheckout\OrderCustomerModifierInterface"
                 alias="sylius_adyen.modifier.express_checkout.order_customer" />

    </services>
</container>
