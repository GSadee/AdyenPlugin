<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/contexts.yml"/>
        <import resource="services/mocker.yml"/>
        <import resource="services/pages.yml"/>
    </imports>

    <services>
        <defaults public="true" />

        <service
            id="tests.sylius_adyen.behat.context.api_mock_client"
            class="Tests\Sylius\AdyenPlugin\HttpClientStub"
        />

        <service
                class="Sylius\AdyenPlugin\Client\AdyenTransportFactory"
                decorates="sylius_adyen.client.adyen_transport_factory"
                id="sylius_adyen.client.adyen_transport_factory.decorator"
        >
            <argument type="service" id="tests.sylius_adyen.behat.context.api_mock_client"/>
        </service>
    </services>
</container>
